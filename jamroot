project imageHasher
: requirements 
    <include>/usr/include/GraphicsMagick/
;

import testing ;

lib log4cplus : : <name>log4cplus ;
lib boost-fs : : <name>boost_filesystem ;
lib boost-sys : : <name>boost_system ;
lib boost-thread : : <name>boost_thread ;
lib boost-chrono : : <name>boost_chrono ;
lib sqlite3 : : <name>sqlite3 ;
lib gtest : : <name>gtest ;
lib boost-option : : <name>boost_program_options ;

use-project commoncpp : commoncpp ;
build-project commoncpp ;

alias libs : log4cplus boost-fs boost-sys boost-thread boost-chrono sqlite3 boost-option commoncpp ;

lib ihcommon : [ GLOB src/main : *.cpp ] libs : <threading>multi <link>shared ;
exe imageHasher : src/ImageHasher.cpp libs ihcommon : <threading>multi <link>shared ;
unit-test tests : [ GLOB src/test : *.cpp ] libs ihcommon ;
exe hashUtil : src/HashUtil.cpp libs ihcommon : <threading>multi <link>shared ;
exe statsUtil : src/StatsUtil.cpp libs ihcommon : <threading>multi <link>shared ;
